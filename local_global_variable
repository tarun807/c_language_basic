//This code will run Properly 
#include <stdio.h>

void addNumbers(int number1, int number2){
    int result = number1+number2;
    printf("Result= %d", result);
}

int main() {
    addNumbers(5,6);
    return 0;
}

//Using local Variable in a wrong way
#include <stdio.h>

void addNumbers(int number1, int number2){
    result = number1+number2;
}

int main() {
    addNumbers(5,6);
    printf("Result= %d", result);// This code will throw back an error because we have not returned the statement 
    return 0;
}

// corrected code for Local variable
#include <stdio.h>

int addNumbers(int number1, int number2){
    int result = number1+number2;
    return result;
}

int main() {
    int sum=addNumbers(5,6);
    printf("Result= %d", sum);  //Output: Result= 11
    return 0;
}

// Global Variable 

#include <stdio.h>

int result; // Because of this there is no error 

int addNumbers(int number1, int number2){
    result = number1+number2;
    printf("Result= %d", result);
}

int main() {
    addNumbers(5,6);
    return 0;
}
