#include <stdio.h>

int main() {
    int arr[2][4]={{1,2,3,4},{5,6,7,8}}; // Think of this one as a table with 2 rows and 4 columns 
    printf("%d ", arr[0][0]);  //To print the elements present in the multidimensional array 
    return 0;
}

#include <stdio.h>

int main() {
    int arr[2][4]={{1,2,3,4},{5,6,7,8}};
    for(int i=0;i<2;++i){
        for(int j=0;j<4;++j){
            printf("%d ", arr[i][j]);  //Printing using a loop
        }
    }
    return 0;
}
