// Created a program to reassign the value of the reallocted memory
#include <stdio.h>
#include <stdlib.h>

int main() {
    int n=4;
    int* age;
    age=(int*) malloc(n*sizeof(int));
    if(age==NULL){
        printf("Memory not allocated");
        return 0;
    }
    printf("Enter age: ");
    for(int i=0;i<n;++i){
        scanf("%d", age+i);
    }
    printf("Array Elements: ");
    for(int i=0;i<n;++i){
        printf("%d\n", *(age+i));
    }
    n=6;
    age=realloc(age, n*sizeof(int));
    age[4]=5;
    age[5]=6;
    printf("Array Elements: ");
    for(int i=0;i<n;++i){
        printf("%d\n", *(age+i));
    }
    free(age);
    return 0;
}
