// Using malloc 

#include <stdio.h>
#include <stdlib.h>

int main() {
    int n=4;
    int* ptr;
    ptr=(int*)malloc(n * sizeof(int));
    printf("Enter input values: ");
    for(int i=0;i<n;++i){
        scanf("\n%d", ptr+i);
    }
    printf("Input values: ");
    for(int i=0;i<n;++i){
        printf("%d\n", *(ptr+i));
    }
    if(ptr==NULL){
        printf("Memory is not allocated");
        return 0;
    }
    free(ptr);
    return 0;
}

//realloc

#include <stdio.h>
#include <stdlib.h>

int main() {
    int n=4;
    int* ptr;
    ptr=(int*)malloc(n * sizeof(int));
    if(ptr==NULL){
        printf("Memory is not allocated");
        return 0;
    }
    printf("Allocated Memory: ");
    for(int i=0;i<n;++i){
        printf("\n%p", ptr+i);
    }
    n=6;
    ptr=realloc(ptr, n*sizeof(int));
    printf("\nNewly allocated Memory: ");
    for(int i=0;i<n;++i){
        printf("\n%p", ptr+i);
    }
    free(ptr);
    return 0;
}
