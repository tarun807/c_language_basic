// In this code, I have created a pointer that updates the value of salary
#include <stdio.h>

int main() {
    double salary;
    printf("Enter previous salary: ");
    scanf("%lf", &salary);
    double* ptr=&salary;
    printf("Address: %p\n", ptr);
    *ptr= 2*salary;
    printf("New Salary: %lf", salary);
    return 0;
}

//Can do it this way too 
#include <stdio.h>

int main() {
    double salary;
    printf("Enter salary: ");
    scanf("%lf", &salary);
    double* pointer=&salary;
    printf("Address: %p", pointer);
    *pointer=2*salary;
    printf("\n%lf", *pointer);
    return 0;
}
